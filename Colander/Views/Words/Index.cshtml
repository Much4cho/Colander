@model IEnumerable<Colander.WordService.Word>

@{
    ViewBag.Title = "Index";
    var currentID = Model.FirstOrDefault().WordListID;
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", currentID)
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.WordList.WordListID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.WordOriginal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WordTranslation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.WordList.WordListID)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.WordOriginal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WordTranslation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WordID }) |
            @Html.ActionLink("Details", "Learn", new { id=item.WordID }) |
