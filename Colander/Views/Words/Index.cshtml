@model IEnumerable<Colander.WordService.Word>

@{
    ViewBag.Title = "Index";
    //var currentID = Model.FirstOrDefault().WordListID;
}


<h2>Words in this list:</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = Model.FirstOrDefault().WordListID }, null)    @*currentID*@ 
</p>
<p>
    @Html.ActionLink("Start Learning", "Learn", "Learn", new { id = Model.FirstOrDefault().WordListID}, null)
</p>
<table class="table">
    <tr style="background-color:darkgray; color:black;">
        @*<th>
            @Html.DisplayNameFor(model => model.WordList.WordListID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.WordOriginal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WordTranslation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.WordList.WordListID)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.WordOriginal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WordTranslation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WordID }) |
            @Html.ActionLink("Details", "LearnWord", "Learn", new { id=item.WordID }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WordID })
        </td>
    </tr>
}

</table>
