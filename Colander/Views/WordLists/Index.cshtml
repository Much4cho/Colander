@model IEnumerable<Colander.WordService.WordList>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WordListName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WordListName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WordListID }) |
            @Html.ActionLink("Details", "Index", "Words", new { id = item.WordListID }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WordListID })
        </td>
    </tr>
}

</table>
